{
  "name": "adi-writer-monorepo",
  "version": "1.0.0",
  "description": "ADI Writer - monorepo with main app, docs, and API functions",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:main": "pnpm -F main dev",
    "dev:docs": "pnpm -F docs dev",
    "build": "pnpm -r build",
    "build:main": "pnpm -F main build",
    "build:docs": "pnpm -F docs build",
    "preview": "pnpm -F main preview",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "clean": "rm -rf node_modules && pnpm -r clean"
  },
  "devDependencies": {
    "typescript": "~4.9.5"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.3.4"
    }
  }
}
