{
  "version": 2,
  "buildCommand": "pnpm run build:main",
  "outputDirectory": "apps/main/dist",
  "env": {
    "VITE_OPENAI_API_KEY": "@openai_key",
    "VITE_API_BASE_URL": "@api_base_url"
  },
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60,
      "memory": 512
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
